<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/scrubs" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"
            android:layout_below="@id/main_image"
            android:text="Scrubs"
            android:textColor="@color/white"
            android:textSize="@dimen/name_size" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="2dp"
            android:layout_below="@+id/name"
            android:text="Comedy"
            android:textColor="@color/white"
            android:textSize="@dimen/genre_size" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:paddingLeft="@dimen/rating_padding"
            android:paddingRight="@dimen/rating_padding"
            android:layout_alignBottom="@+id/genre"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="8.5"
            android:textColor="@color/white"
            android:textSize="@dimen/rating_size"
            android:layout_alignTop="@+id/name" />

    </RelativeLayout>

</android.support.v7.widget.CardView>